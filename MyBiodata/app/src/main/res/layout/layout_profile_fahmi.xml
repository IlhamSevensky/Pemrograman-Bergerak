<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/colorPrimaryDark">

    <View
        android:id="@+id/divider_profile_fahmi"
        style="@style/horizontal_divider"
        android:background="@color/secondaryTextColor"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <ScrollView
        android:id="@+id/scrollView_fahmi"
        android:layout_below="@+id/divider_profile_fahmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img_fahmi"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Muhammad Fahmi Ulinnuha"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/profile_email_fahmi"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/profile_nim_fahmi"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/profile_class"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/profile_institution"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>